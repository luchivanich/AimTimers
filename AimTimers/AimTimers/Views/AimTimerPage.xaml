<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="AimTimers.Views.AimTimerPage"
             Title="{Binding Title}">

    <StackLayout Spacing="10" Margin="20, 80, 20, 0">
        <Label Text="Name:"/>
        <Entry Text="{Binding Title}" />
        <Label Text="Description:"/>
        <Entry Text="{Binding Description}" />
        <Label Text="Time" />
        <TimePicker Time="{Binding Time}" Format="HH:mm"/>

        <Button Text="Update" Command="{Binding UpdateItemCommand}"/>

        <ListView x:Name="ItemsListView"
                ItemsSource="{Binding AimTimerItems}"
                VerticalOptions="FillAndExpand"
                HasUnevenRows="true"
                RefreshCommand="{Binding RefreshCommand}"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                CachingStrategy="RecycleElement">
            <!--<ListView.Behaviors>
                <behaviors:EventToCommandBehavior EventName="ItemSelected" Command="{Binding SelectItemCommand}" Converter="{StaticResource SelectedItemConverter}"/>
            </ListView.Behaviors>-->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <StackLayout
                                Orientation="Vertical"
                                Padding="10"
                                HorizontalOptions="StartAndExpand">
                                <Label
                                    Text="Date: " 
                                    LineBreakMode="NoWrap" 
                                    Style="{DynamicResource ListItemDetailTextStyle}" 
                                    FontSize="16" />
                                <Label
                                    Text="{Binding DateRunning}" 
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemDetailTextStyle}"
                                    FontSize="13" />
                                <Label 
                                    Text="TimeLeft: " 
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemDetailTextStyle}"
                                    FontSize="13" />
                                <Label
                                    Text="{Binding TimeLeft}" 
                                    d:Text="Time Left"
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemDetailTextStyle}"
                                    FontSize="13" />
                            </StackLayout>
                            <StackLayout 
                                Orientation="Horizontal"
                                HorizontalOptions="End"
                                IsVisible="{Binding IsCurrent}">
                                <Button
                                    Text="&#xe034;"
                                    FontFamily="{StaticResource CustomFont}"
                                    Command="{Binding PauseCommand}"
                                    CommandParameter="{Binding .}"
                                    WidthRequest="50"
                                    FontSize="20"
                                    VerticalOptions="Start"/>
                                <Button
                                    Text="&#xe037;"
                                    FontFamily="{StaticResource CustomFont}"
                                    Command="{Binding PlayCommand}"
                                    CommandParameter="{Binding .}"
                                    WidthRequest="50"
                                    FontSize="20"
                                    VerticalOptions="Start"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
    
</ContentPage>